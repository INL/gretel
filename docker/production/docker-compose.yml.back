version: "3"

services:
  gretel:
    build: .
    image: gretel
    ports:
      - "8000:8000"
    depends_on:
      - alpino
      - basex
      - redis
    volumes:
      - ./backend:/gretel
    environment:
      - BASEX_HOST=basex
      - ALPINO_HOST=alpino
      - REDIS_HOST=redis
    command: bash -c "sleep 5 && python manage.py runserver 0.0.0.0:8000"

  celery:
    profiles: 
      - celery
    image: gretel
    depends_on:
      - alpino
      - basex
      - redis
      - gretel
    volumes:
      - ./backend:/gretel
    environment:
      - BASEX_HOST=basex
      - ALPINO_HOST=alpino
      - REDIS_HOST=redis
    command: bash -c "sleep 5 && python -m celery -A gretel.celery worker --loglevel=info -B"

  alpino:
    image: registry.webhosting.rug.nl/compling/alpino:latest
    environment:
      - PROLOGMAXSIZE=1500M
    ports:
      - "7001:7001"
    command: Alpino -notk -veryfast user_max=600000 server_kind=parse server_port=7001 assume_input_is_tokenized=on debug=0 end_hook=xml -init_dict_p batch_command=alpino_server

  basex:
    image: basex/basexhttp:latest
    ports:
      - "1984:1984"
    command: basexserver

  redis:
    image: redis:latest
    ports:
      - "6379:6379"
    command: redis-server
